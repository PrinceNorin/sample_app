<h1>New Password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_reset_path(@user.id), method: :patch do %>
      <%= label_tag :password, 'New Password' %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Reset Password', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>