<div class="row">
  <div class="span4 pull-left">
    <%= form_tag search_path, class: 'form-inline', method: :get do %>
      <%= text_field_tag :search, params[:search],
                         class: 'input-large',
                         placeholder: 'Search' %>
      <%= submit_tag 'Search', class: 'btn btn-primary', name: nil  %>
    <% end %>
  </div>
</div>